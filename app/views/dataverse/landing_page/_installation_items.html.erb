<div class="mb-3">
  <%= form_with url: view_dataverse_landing_path, method: :get, local: true do |f| %>
    <div class="input-group">
      <%= f.text_field :query, value: params[:query], class: 'form-control', placeholder: t('.field_search_placeholder') %>
      <%= f.submit t('.button_submit_text'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div class="card dataset-header">
  <div class="card-header d-flex align-items-center">
    <%= installations_page.to_s %>
    <nav aria-label="<%= t('dataverse.landing_page.installation_items.paginator_bar_a11y_label') %>" class="ms-auto">
      <%= link_to_landing_prev_page(installations_page, {class: "text-decoration-none"}) %>
      <%= t(".paginator_page_text", page: installations_page.page) %>
      <%= link_to_landing_next_page(installations_page, {class: "text-decoration-none"}) %>
    </nav>
  </div>
  <% if installations_page.page_items.any? %>
    <ul class="list-group">
      <%= render partial: 'installation', collection: installations_page.page_items, as: :installation %>
    </ul>
    <div class="card-header d-flex justify-content-end">
      <nav aria-label="<%= t('.paginator_bar_a11y_label') %>" class="ms-auto">
        <div class="d-flex align-items-center gap-2">
          <%= link_to_landing_prev_page(installations_page, {class: "text-decoration-none"}) %>
          <%= t(".paginator_page_text", page: installations_page.page) %>
          <%= link_to_landing_next_page(installations_page, {class: "text-decoration-none"}) %>
        </div>
      </nav>
    </div>
  <% else %>
    <div class="alert alert-warning mt-3" role="status">
      <%= t('dataverse.landing_page.installation_items.msg_no_items_text') %>
    </div>
  <% end %>
</div>